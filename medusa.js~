


var source = 0;


var vertexList=
    [[0, 2],
     [2, 2],
     [4, 2],
     [6, 2],
     [8, 4],
     [12, 2]]



var edgeList=
    [[1, 1],
     [3, 1],
     [0, 1],
     [4, 1],
     [4, 1],
     [5, 1],
     [0, 1],
     [4, 1],
     [1, 1],
     [2, 1],
     [3, 1],
     [5, 1],
     [2, 1],
     [4, 1]];


var graph = new Springy.Graph();



var vertex = new Array(vertexList.length);

for (var i=0; i<vertexList.length; i++) {
    vertex[i] = graph.newNode({label:' level: ' + -1 });
}

for (var i=0; i<vertexList.length; i++) {
    for (var j=0; j<vertexList[i][1]; j++) {
        graph.newEdge(vertex[i], vertex[edgeList[vertexList[i][0]+j][0]]);
    }
}



$('#graph').springy({ graph: graph });

var queue = new Array(vertexList.length);
var visited = new Array(vertexList.length);


queue.push(0);


var step = function() {
    if (queue.length == 0) return;
    var c = queue.pop();
    var startEdge = vertexList[c][0];
    var numEdge = vertexList[c][1];
    for (var i=startEdge; i<startEdge+numEdge; i++) {
        alert(edgeList[i][0]);
    }
    graph.notify();

}